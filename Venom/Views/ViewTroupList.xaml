                                <TextBlock FontSize="10" Text="{Binding TroupOut.UnitRam}" />
                                <TextBlock FontSize="10" Text="{Binding TroupAway.UnitRam}" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <!--  Unit Catapult  -->
                <DataGridTemplateColumn Width="75">
                    <DataGridTemplateColumn.HeaderTemplate>

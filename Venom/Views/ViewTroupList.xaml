                                <TextBlock FontSize="10" Text="{Binding TroupVillage.UnitSpy}" />
                                <TextBlock FontSize="10" Text="{Binding TroupOut.UnitSpy}" />
                                <TextBlock FontSize="10" Text="{Binding TroupAway.UnitSpy}" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <!--  Unit Light  -->

                                <TextBlock FontSize="10" Text="{Binding TroupVillage.UnitLight}" />
                                <TextBlock FontSize="10" Text="{Binding TroupOut.UnitLight}" />
                                <TextBlock FontSize="10" Text="{Binding TroupAway.UnitLight}" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

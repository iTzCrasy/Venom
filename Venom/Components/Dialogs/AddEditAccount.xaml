<Dialogs:BaseMetroDialog
    x:Class="Venom.Components.Dialogs.AddAccount"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Dialogs="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helper="clr-namespace:Venom.Helpers"
    xmlns:local="clr-namespace:Venom.Components.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    helper:MvvmBehaviors.LoadedMethodName="LoadGameServers"
    mc:Ignorable="d">
    <Grid Margin="0,10,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="20" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" MinHeight="20" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Select Server" />
        <ComboBox
            Grid.Row="1"
            ItemsSource="{Binding GameServers}"
            SelectedItem="{Binding SelectedServer}" />

        <TextBlock Grid.Row="2" Text="Enter Character Name:" />
        <TextBox Grid.Row="3" />

    </Grid>
</Dialogs:BaseMetroDialog>

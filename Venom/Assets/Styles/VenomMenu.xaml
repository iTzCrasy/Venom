    <!-- Menu Item Style -->
    <Style x:Key="VenomMenuItemStyle" TargetType="{x:Type MenuItem}">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Margin" Value="0" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="MinWidth" Value="0" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type MenuItem}">
                    <Grid x:Name="PartItemSelected">
                        <ContentPresenter x:Name="PartHeaderContent"
                                          Margin="{TemplateBinding Padding}"
                                          ContentSource="Header"
                                          HorizontalAlignment="Center"
                                          SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                        <Rectangle x:Name="PartHeaderBrush"
                                   VerticalAlignment="Bottom"
                                   Height="4"
                                   Visibility="Collapsed"
                                   Fill="{StaticResource VenomMenuSelectorBrush}"/>
                        <Popup IsOpen="{TemplateBinding IsSubmenuOpen}" AllowsTransparency="True" Focusable="False" >
                            <Border BorderThickness="1" Background="{StaticResource VenomMenuBackground}" BorderBrush="Transparent">
                                <StackPanel IsItemsHost="True" />
                            </Border>
                        </Popup>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <!--<Trigger Property="IsSelected" Value="True">
                            <Trigger.Setters>
                                <Setter TargetName="PartHeaderBrush" Property="Visibility" Value="Visible"/>
                            </Trigger.Setters>
                        </Trigger>-->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.Setters>
                                <Setter TargetName="PartHeaderBrush" Property="Visibility" Value="Visible"/>
                                <Setter Property="Foreground" Value="{StaticResource VenomMenuSelectorBrush}"/>
                            </Trigger.Setters>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="VenomMenuStyle" TargetType="{x:Type Menu}">
        <Setter Property="Background" Value="{StaticResource VenomMenuBackground}"/>
        <Setter Property="Foreground" Value="{StaticResource VenomMenuForeground}"/>
        <Setter Property="ItemContainerStyle" Value="{StaticResource VenomMenuItemStyle}"/>
    </Style>
    
</ResourceDictionary>
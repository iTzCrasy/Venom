                                <TextBlock FontSize="10" Text="{Binding TroupOut.UnitCatapult}" />
                                <TextBlock FontSize="10" Text="{Binding TroupAway.UnitCatapult}" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>

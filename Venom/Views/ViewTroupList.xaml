                                <TextBlock FontSize="10" Text="{Binding TroupVillage.UnitAxe}" />
                                <TextBlock FontSize="10" Text="{Binding TroupOut.UnitAxe}" />
                                <TextBlock FontSize="10" Text="{Binding TroupAway.UnitAxe}" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <!--  Unit Archer  -->

<Dialogs:BaseMetroDialog
    x:Class="Venom.Dialogs.SetupPlayer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Behaviors="clr-namespace:MahApps.Metro.Behaviors"
    xmlns:Controls="clr-namespace:MahApps.Metro.Controls"
    xmlns:Dialogs="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Venom.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Setup Player"
    mc:Ignorable="d">
    <Grid Margin="0,10,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="20" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" MinHeight="20" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Select Server" />
        <ComboBox Grid.Row="1" />

        <TextBlock Grid.Row="2" Text="Enter Character Name:" />
        <TextBox Grid.Row="3" />

    </Grid>
</Dialogs:BaseMetroDialog>
